<?xml version="1.0"?>

<project name="portableInterceptor" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--          PortableInterceptor build file              -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<property name="include" value="${dirs.base}/idl"/>
	<property name="idlflags" 
                value="-I${include}/omg -I${include}/jacorb -d
	${src}/generated"/>
   </target>

   <target name="all" depends="init">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
	       includes="org/jacorb/orb/portableInterceptor/*.java"
	       />
   </target>

   <target name="clean">
   </target>

</project>





